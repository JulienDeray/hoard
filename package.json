{
  "name": "hoard",
  "version": "0.1.0",
  "description": "Personal CFO platform for multi-asset wealth management",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "migrate": "tsx scripts/migrate.ts",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "lint": "eslint src/",
    "format": "prettier --write src/",
    "dev:api": "tsx src/api/index.ts",
    "dev:api:dev": "HOARD_ENV=dev tsx src/api/index.ts",
    "dev:api:prod": "HOARD_ENV=prod tsx src/api/index.ts",
    "dev:web": "cd web && npm run dev",
    "dev:all": "concurrently \"npm run dev:api:dev\" \"npm run dev:web\"",
    "web:dev": "cd web && npm run dev",
    "web:build": "cd web && npm run build"
  },
  "keywords": [
    "wealth-management",
    "portfolio",
    "tracker",
    "crypto",
    "bitcoin",
    "ethereum"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.30.0",
    "@fastify/cors": "^11.2.0",
    "axios": "^1.7.0",
    "better-sqlite3": "^11.0.0",
    "conf": "^13.0.0",
    "date-fns": "^4.0.0",
    "dotenv": "^16.4.0",
    "fastify": "^5.7.1",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/better-sqlite3": "^7.6.0",
    "@types/node": "^22.0.0",
    "@vitest/ui": "^4.0.15",
    "concurrently": "^9.2.1",
    "eslint": "^9.0.0",
    "pino-pretty": "^13.1.3",
    "prettier": "^3.3.0",
    "tsx": "^4.0.0",
    "typescript": "^5.6.0",
    "typescript-eslint": "^8.0.0",
    "vitest": "^4.0.15"
  }
}
